<Window x:Class="WPFLayer.View.MainPersonalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLayer.View"
        mc:Ignorable="d"
        Title="MainPersonalWindow" Height="600" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Skapa Aktivitet">
                <StackPanel Orientation="Horizontal" Width="780" Height="500" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="380" Height="500">
                        <Label >Titel</Label>
                        <TextBox Name="TitelTxtBox" Height="25" Width="300" HorizontalAlignment="Left" Margin="8 0"></TextBox>
                        <Label >Ansvarig Person</Label>
                        <TextBox Name="AnsvarigPersonTxtBox" Height="25" Width="300" HorizontalAlignment="Left" Margin="8 0"></TextBox>
                        <Label>Kontaktperson</Label>
                        <TextBox Height="25" Width="300" HorizontalAlignment="Left" Margin="8 0"></TextBox>
                        <Label>Plats</Label>
                        <TextBox Height="25" Width="300" HorizontalAlignment="Left" Margin="8 0"></TextBox>
                        <Label>Startdatum</Label>
                        <DatePicker Height="25" Width="300" HorizontalAlignment="Left" Margin="8 0"></DatePicker>
                        <Label>Slutdatum</Label>
                        <DatePicker Height="25" Width="300" HorizontalAlignment="Left" Margin="8 0"></DatePicker>

                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Orientation="Vertical" Width="400" Height="500">
                        <Label>Beskrivning</Label>
                        <RichTextBox Width="360" Height="250"></RichTextBox>
                        <Button Name="SkapaAktivitet" Height="25" Width="360" Margin="5">Skapa Aktivitet</Button>
                    </StackPanel>
                </StackPanel>
                
            </TabItem>
            <TabItem Header="Redigera Aktivitet">
                <StackPanel Orientation="Vertical" Width="780" Height="500" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="720" Height="60" VerticalAlignment="Top" Margin="30 10 30 0">
                        <Label>Välj aktivitet att redigera:</Label>
                        <ComboBox Height="25"></ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="740" Height="440">
                        <StackPanel Orientation="Vertical" Width="390">
                            <Label>Titel</Label>
                            <TextBox Name="RedigeraTiteltxtBox" Height="25" Width="300" HorizontalAlignment="Left"></TextBox>
                            <Label>Ansvarig person</Label>
                            <TextBox Name="RedigeraAnsvarigtxtBox" Height="25" Width="300" HorizontalAlignment="Left"></TextBox>
                            <Label>Kontaktperson</Label>
                            <TextBox Name="RedigeraKontaktpersontxtBox" Height="25" Width="300" HorizontalAlignment="Left"></TextBox>
                            <Label>Plats</Label>
                            <TextBox Name="RedigeraPlatstxtBox" Height="25" Width="300" HorizontalAlignment="Left"></TextBox>
                            <Label>Startdatum</Label>
                            <DatePicker Name="RedigeraStartdatumDatePicker" Height="25" Width="300" HorizontalAlignment="Left"></DatePicker>
                            <Label>Slutdatum</Label>
                            <DatePicker Name="RedigeraSlutdatumDatePicker" Height="25" Width="300" HorizontalAlignment="Left"></DatePicker>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Width="340">
                            <Label>Beskrivning</Label>
                            <RichTextBox Name="RedigareAktivitetRichTxtBox" Width="300" Height="245" HorizontalAlignment="Left"></RichTextBox>
                            <Button Name="RedigeraAktivitetButton" Width="200" Height="25" Margin="0 10">Spara ändringar</Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Publicera Aktivitet"></TabItem>
            <TabItem Header="Se Anmälningar"></TabItem>
            <TabItem Header="Skapa Utskickslistor"></TabItem>
        </TabControl>
        <StackPanel Name="SuperAdminPanel" Height="45" Width="600" VerticalAlignment="Bottom" HorizontalAlignment="Left" Orientation="Horizontal">
            <TextBlock Margin="10">Välkommen SuperAdmin! Här kan du skapa nytt personalkonto: </TextBlock>
            <Button Name="SkapaPersonalKonto" Height="25" Width="180">Skapa nytt personalkonto</Button>
        </StackPanel>
        <Button Name="LoggaUtBtn" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="25" Width="100" Margin="10" Click="LoggaUtBtn_Click">Logga ut</Button>
    </Grid>
</Window>
